    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch test file",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}"
        },
        {
            "name": "Launch main debug, race",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "showLog": true,
            "buildFlags": "-race",
            "args": ["serve", "-c", "../.rr.yaml"],
            "program": "${workspaceFolder}/cmd/main.go"
        }
    ]
}